[flake8]
# Максимальная длина строки (совместимо с black)
max-line-length = 88

# Игнорируемые ошибки
ignore =
    E203,  # whitespace before ':' (конфликт с black)
    E501,  # line too long (обрабатывается black)
    W503,  # line break before binary operator (устаревшее правило)
    D100,  # Missing docstring in public module
    D104,  # Missing docstring in public package

# Исключенные директории
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Максимальная сложность функции (cyclomatic complexity)
max-complexity = 10

# Docstring конвенции
docstring-convention = google

# Статистика
statistics = True
count = True
